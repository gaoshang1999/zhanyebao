<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/client_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/home" />

    <LinearLayout
        android:id="@+id/client_name_and_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/client_list_item_text_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/client_list_item_text_phone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="15010207216"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/already_care_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="已关注"
            android:visibility="gone" />

        <Button
            android:id="@+id/button1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@+drawable/client_line_care" />

        <Button
            android:id="@+id/button2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@+drawable/client_line_sms" />

        <Button
            android:id="@+id/button3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@+drawable/client_line_phone" />
    </LinearLayout>

</LinearLayout>