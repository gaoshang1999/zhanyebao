 
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal"  

        android:padding="5dip" >  
      

    <LinearLayout  
        android:layout_width="0dp"  
        android:layout_height="wrap_content"    
        android:orientation="vertical"           
        android:layout_weight="1"
         >
        
        <TextView  
            android:id="@+id/client_list_item_text_name"  
            android:layout_width="wrap_content"  
            android:layout_height="fill_parent"  
            android:gravity="center_vertical"  
            android:textColor="#000000"
            android:layout_margin="2dip"
            android:paddingLeft="5dip" />  
            
         <TextView  
            android:id="@+id/client_list_item_text_phone"  
            android:layout_width="wrap_content"  
            android:layout_height="fill_parent"  
            android:gravity="center_vertical"  
            android:textColor="#000000"
            android:layout_margin="2dip"
            android:paddingLeft="5dip"
            android:text="15010207216" />  
    </LinearLayout>  
    
    <LinearLayout  
	    android:layout_width="0dp"  
	    android:layout_height="50dp" 
	    android:layout_weight="1"
	    android:layout_gravity="center_vertical" 
    >  
    
       <TextView  
            android:id="@+id/client_list_item_text_hint"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:gravity="center_vertical"  
            android:textColor="#000000"
            android:maxLength="30"
            android:text="有明确意向，重点跟踪（下周二，7月15号）"
		 />  
        
        <Button
        android:id="@+id/btnHint"
        android:layout_width="wrap_content"  
        android:layout_height="30dp"   
        android:gravity="center_vertical" 
        android:textColor="#000000"
        android:background="#26A69A"
        android:text="点击添加说明"/>
        
    </LinearLayout>  
        
    <LinearLayout  
        android:layout_width="0dp"  
        android:layout_height="40dp"    
        android:orientation="horizontal"  
        android:paddingRight="20dp"
        android:layout_weight="1"
        android:gravity="right"
         >  

    <Button
        android:id="@+id/button2"
        android:layout_width="30dp"  
        android:layout_height="30dp"   
        android:layout_margin="5dp"
        android:background="@+drawable/client_line_sms"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="30dp"  
        android:layout_height="30dp"      
        android:layout_margin="5dp"
        android:background="@+drawable/client_line_phone" />
      
    </LinearLayout>  
</LinearLayout>  