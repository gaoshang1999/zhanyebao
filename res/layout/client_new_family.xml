<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:my="http://schemas.android.com/apk/res/com.heverage.zhanyebao"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.heverage.zhanyebao.view.OptionsView
            android:id="@+id/client_marital_status_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            my:array="@+array/marital_status"
            my:textHint="婚姻状况" />

        <LinearLayout
            android:id="@+id/client_wedding_date_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="结婚纪念日"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/client_wedding_date"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dip"
                android:maxLength="30"
                android:maxLines="1"
                android:text="请选择"
                android:textColor="@color/my_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/my_gray" />
        
        <LinearLayout
            android:id="@+id/client_boy_num_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="男孩数"
                android:textColor="#000000"
                android:textSize="16sp" />

			<EditText
                android:id="@+id/client_boy_num"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dip"
                android:background="@+drawable/util_edittext"
                android:hint="请输入"
                android:maxLength="2"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/my_gray"
                android:textColorHint="@color/my_gray"
                android:textSize="16sp" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/my_gray" />
        
         <LinearLayout
            android:id="@+id/client_girl_num_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="女孩数"
                android:textColor="#000000"
                android:textSize="16sp" />

			<EditText
                android:id="@+id/client_girl_num"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dip"
                android:background="@+drawable/util_edittext"
                android:hint="请输入"
                android:maxLength="2"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/my_gray"
                android:textColorHint="@color/my_gray"                
                android:textSize="16sp" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/my_gray" />
        
        <LinearLayout
            android:id="@+id/client_children_num_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="子女数"
                android:textColor="#000000"
                android:textSize="16sp" />

			<TextView
                android:id="@+id/client_children_num"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dip"
                android:hint="根据男孩数和女孩数自动计算"
                android:maxLength="2"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/my_gray"
                android:textColorHint="@color/my_gray"                
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/my_gray" />
        
         <LinearLayout
            android:id="@+id/client_family_info_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="家庭成员"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/client_family_info"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dip"
                android:background="@+drawable/util_edittext"
                android:hint="请输入"
                android:maxLength="30"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/my_gray"
                android:textColorHint="@color/my_gray"                
                android:textSize="16sp" >
            </EditText>			
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/my_gray" />
    </LinearLayout>

</ScrollView>