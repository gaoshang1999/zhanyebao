<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res/com.heverage.zhanyebao"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.heverage.zhanyebao.view.OptionsView
            android:id="@+id/client_source_type_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            my:array="@+array/source_type"
            my:textHint="客户来源" />
        
        <LinearLayout
            android:id="@+id/client_introducer_name_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="介绍人"
                android:textColor="#000000"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/client_introducer_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dip"
                android:layout_marginBottom="0dip"
                android:background="@+drawable/util_edittext"
                android:hint="请输入（30个字以内）"
                android:inputType="number"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/my_gray"
                android:textColorHint="@color/my_gray"                  
                android:textSize="16sp" >
            </EditText>
        </LinearLayout>
            
        <com.heverage.zhanyebao.view.OptionsView
            android:id="@+id/client_introducer_relationship_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            my:array="@+array/introducer_relationship"
            my:textHint="与介绍人关系" />

        <com.heverage.zhanyebao.view.OptionsView
            android:id="@+id/client_introducer_closeness_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            my:array="@+array/introducer_closeness"
            my:textHint="与介绍人亲密度" />

        <LinearLayout
            android:id="@+id/client_introducer_evaluation_line"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="介绍人评价"
                android:textColor="#000000"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/client_introducer_evaluation"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:gravity="top"
                android:layout_margin="10dip"
                android:background="@+drawable/util_edittext"
                android:hint="请输入（100个字以内）"
                android:maxLength="100"
                android:textColor="@color/my_gray"
                android:textColorHint="@color/my_gray"                  
                android:textSize="16sp" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/my_gray" />

       <com.heverage.zhanyebao.view.OptionsView
            android:id="@+id/client_contact_type_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            my:array="@+array/contact_type"
            my:textHint="可接触程度" />
                
        <LinearLayout
            android:id="@+id/client_contact_attention_line"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="联系时注意问题"
                android:textColor="#000000"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/client_contact_attention"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_margin="10dip"
                android:gravity="top"
                android:background="@+drawable/util_edittext"
                android:hint="请输入（100个字以内）"
                android:maxLength="100"
                android:textColor="@color/my_gray"
                android:textColorHint="@color/my_gray"                  
                android:textSize="16sp" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/my_gray" />
    </LinearLayout>

</ScrollView>