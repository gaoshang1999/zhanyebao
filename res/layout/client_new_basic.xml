<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:my="http://schemas.android.com/apk/res/com.heverage.zhanyebao"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >

        <LinearLayout
            android:id="@+id/client_name_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
			android:focusableInTouchMode="true" 
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="姓名        "
                android:textColor="#000000"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/client_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dip"
                android:layout_marginBottom="0dip"
                android:hint="30个字符以内"
                android:background="@+drawable/util_edittext"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16sp" >
            </EditText>
            
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#BBBBBB" />
        
        <com.heverage.zhanyebao.view.OptionsView
            android:id="@+id/client_gender_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            my:textHint="性别"
            my:array="@+array/gender" />
        

        <LinearLayout
            android:id="@+id/client_birthday_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="出生日期"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/client_birthday"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dip"
                android:maxLength="30"
                android:maxLines="1"
                android:text="请选择"
                android:textColor="#bbbbbb"
                android:textSize="16sp" />

            <DatePicker
                android:id="@+id/client_birthday_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dip"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#BBBBBB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="年龄        "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/client_age"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dip"
                android:maxLength="30"
                android:maxLines="1"
                android:text=""
                android:textColor="#bbbbbb"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#BBBBBB" />

        <LinearLayout
            android:id="@+id/client_phone_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="手机号码        "
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_margin="2dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/buttonAddPhone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dip"
                        android:background="@+drawable/add"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#BBBBBB" />

        <LinearLayout
            android:id="@+id/client_address_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="地址        "
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_margin="2dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/buttonAddAddress"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dip"
                        android:background="@+drawable/add"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

         
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#BBBBBB" />

        <LinearLayout
            android:id="@+id/client_region_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="地区        "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/client_region"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dip"
                android:maxLength="30"
                android:maxLines="1"
                android:text="请选择(省、市、区)"
                android:textColor="#bbbbbb"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#BBBBBB" />

      <com.heverage.zhanyebao.view.OptionsView
            android:id="@+id/client_cityType_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            my:textHint="城市分类"
            my:array="@+array/cityType" />

        
      <com.heverage.zhanyebao.view.OptionsView
            android:id="@+id/client_educaiton_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            my:textHint="教育程度"
            my:array="@+array/educaiton" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="名片        "
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/home" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#BBBBBB" />
    </LinearLayout>

</ScrollView>